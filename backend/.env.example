# ==================== 应用配置 ====================
# 服务器配置 (如果不设置，将使用环境默认值)
HOST=0.0.0.0  # 默认: 127.0.0.1
PORT=8080  # 默认: 8080

# 控制fastapi debug模式和uvicorn热启动，在生产环境中建议设置为 false
APP_DEBUG=true  # 默认: false

# 允许的跨域来源 (用逗号分隔，* 表示允许所有)
CORS_ORIGINS=*  # 默认: *

# 是否允许跨域凭证
CORS_ALLOW_CREDENTIALS=false  # 默认: false

# 允许的HTTP方法 (用逗号分隔，* 表示允许所有)
CORS_ALLOW_METHODS=*  # 默认: *

# 允许的HTTP头 (用逗号分隔，* 表示允许所有)
CORS_ALLOW_HEADERS=*  # 默认: *

# ==================== 日志配置 ====================
# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO  # 默认: INFO

# 是否启用文件日志
ENABLE_FILE_LOGGING=true  # 默认: true

# 日志轮转配置
LOG_FILE_MAX_SIZE_MB=10  # 默认: 10
LOG_BACKUP_COUNT=5  # 默认: 5

# 日志文件路径
LOG_DIR=logs  # 默认: logs
LOG_FILENAME=app.log  # 默认: app.log

# 第三方库日志级别
WATCHFILES_LOG_LEVEL=WARNING  # 默认: WARNING
UVICORN_LOG_LEVEL=ERROR  # 默认: ERROR
UVICORN_ACCESS_LOG_LEVEL=CRITICAL  # 默认: CRITICAL
FASTAPI_LOG_LEVEL=ERROR  # 默认: ERROR

# ==================== 数据库配置 ====================
# PostgreSQL 数据库配置
DB_TYPE=postgresql  # 默认: postgresql
DB_HOST=localhost  # 默认: localhost
DB_PORT=5432  # 默认: 5432
DB_USER=postgres  # 默认: postgres
DB_PASSWORD=123456  # 默认: "" (空字符串)
DB_NAME=hydrology_db  # 默认: "" (空字符串)

# 数据库连接池配置
DB_POOL_SIZE=10  # 默认: 10
DB_MAX_OVERFLOW=20  # 默认: 20
DB_POOL_TIMEOUT=30  # 默认: 30